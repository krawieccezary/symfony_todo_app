<div class="modal fade" id="addTaskModal" tabindex="-1" aria-labelledby="addTaskModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-scrollable">
        <div class="modal-content">
            {% form_theme addTaskForm 'bootstrap_5_layout.html.twig' %}
            {{ form_start(addTaskForm, { 'attr': {'class': 'text-start'}}) }}
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Dodaj zadanie</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {{ form_row(addTaskForm.name) }}
                {{ form_row(addTaskForm.description) }}
                {{ form_row(addTaskForm.date) }}
                {{ form_row(addTaskForm.is_period) }}
                <div class="collapse" id="periodOptions">
                    {{ form_row(addTaskForm.period_from) }}
                    {{ form_row(addTaskForm.period_to) }}
                    {{ form_row(addTaskForm.period_time) }}
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Zamknij</button>
                <button type="submit" class="btn btn-primary">Dodaj zadanie</button>
            </div>
            {{ form_end(addTaskForm) }}
        </div>
    </div>
</div>