{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="toast show position-fixed bottom-0 end-0 m-5" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto">{{ label | capitalize }}</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Zamknij"></button>
            </div>
            <div class="toast-body">
                {{ message }}
            </div>
        </div>
    {% endfor %}
{% endfor %}