{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Twoje zadania{% endblock %}

{% block body %}
    <main>
        <div class="container text-center">
            <div class="row">
                <div class="col-8">
                    {% if todos is empty %}
                        <span>Brak zada≈Ñ do wykonania</span>
                    {% else %}
                        <ul class="list-group list-group-flush text-start pb-5">
                            {% for todo in todos %}
                                <li class="list-group-item d-flex justify-content-between align-items-start">
                                    <div class="ms-2 me-auto">
                                        <div class="fw-bold">{{ todo.name }}</div>
                                        {{ todo.description }}
                                    </div>
                                    <div>
                                        <a href="{{ path('app_todo', {id: todo.id}) }}"><i class="bi bi-pencil"></i></a>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>
                <div class="col-4">
                    <!-- Button trigger modal -->
                    <button class="d-inline-block position-fixed border-0 fs-2 text-primary bg-transparent" tabindex="0" data-bs-toggle="modal" data-bs-target="#addTaskModal" >
                        <span data-bs-toggle="popover" data-bs-trigger="hover focus" data-bs-content="Dodaj zadanie">
                            <i class="bi bi-plus-square-fill"></i>
                        </span>
                    </button>
                    {% include('/todo/_add_task_modal.html.twig') %}
                </div>
            </div>
        </div>
        {% include('todo/_toasts.html.twig') %}
    </main>
{% endblock %}
